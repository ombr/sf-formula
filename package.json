{
  "name": "sf-formula",
  "version": "1.1.1",
  "description": "Formula evaluation engine",
  "main": "dist/formula.js",
  "types": "dist/formula.d.ts",
  "scripts": {
    "test-luc": "cm-buildhelper src/formula.ts",
    "clean": "rimraf dist",
    "generate-parser": "lezer-generator src/formula.grammar -o src/parser.ts",
    "generate-parser-wip": "cm-buildhelper src/lang-formula.ts",
    "build": "npm run clean && npm run generate-parser && tsc -p tsconfig.json",
    "start": "npm run build && npm install --prefix demo && npm run dev --prefix demo",
    "test": "npm run build && jest",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepare": "husky",
    "prepublishOnly": "npm test && npm run lint",
    "check-types": "tsc --noEmit",
    "docs": "typedoc --out docs src/formula.ts",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "formula",
    "evaluation",
    "typescript"
  ],
  "author": "Luc Boissaye",
  "license": "MIT",
  "dependencies": {
    "@codemirror/language": "^6.0.0",
    "@lezer/common": "^1.2.3",
    "@lezer/highlight": "^1.0.0",
    "@lezer/lr": "^1.0.0"
  },
  "devDependencies": {
    "@codemirror/autocomplete": "^6.10.2",
    "@codemirror/buildhelper": "^1.0.0",
    "@codemirror/commands": "^6.3.0",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/language": "^6.0.0",
    "@codemirror/search": "^6.5.4",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.37.1",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@eslint/js": "^9.21.0",
    "@lezer/generator": "^1.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "codemirror": "^6.0.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.2.3",
    "ts-jest": "^29.2.6",
    "typedoc": "^0.28.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
